root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{py,yml}]
indent_style = space

[*.py]
indent_size = 4
max_line_length = 79

[*.rst]
indent_size = 4

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[tox.ini]
indent_size = 2
indent_style = space
